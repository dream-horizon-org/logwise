# -----------------------------
# Log Central - .env.example
# Fill in sensitive values locally; do NOT commit real secrets.
# -----------------------------

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=logs_topic

# MySQL
MYSQL_DATABASE=logcentral
MYSQL_USER=loguser
MYSQL_PASSWORD=changeme
MYSQL_ROOT_PASSWORD=rootsecret

# Orchestrator
ORCH_PORT=8080
CRON_TOKEN=replace_me

# AWS / S3 / Athena
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=my-log-bucket
S3_PREFIX=logs/parquet
S3_ATHENA_OUTPUT=s3://my-log-bucket/athena-output/
ATHENA_WORKGROUP=primary
ATHENA_CATALOG=AwsDataCatalog
ATHENA_DATABASE=log_analytics

# Spark libs
SPARK_VERSION_MATCH=3.5.1
HADOOP_AWS_VERSION=3.3.4
AWS_SDK_VERSION=1.12.772

# Grafana
GRAFANA_PORT=3000
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=grafana-athena-datasource

# Spark behavior
SPARK_STREAMING=true

# Java Spark app submission
# MAIN_CLASS=com.example.MainClass
# AUTO_SPARK_SUBMIT=true
