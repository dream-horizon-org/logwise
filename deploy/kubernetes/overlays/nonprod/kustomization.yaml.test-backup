apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
  - ../../base

patches:
  - path: image-pull-policy-patch.yaml

# Image replacement - set via REGISTRY and TAG env vars during deployment
# Example: REGISTRY=ghcr.io/your-org TAG=1.0.0 kustomize build . | kubectl apply -f -
images:
  - name: logwise-vector
    newName: varunwalia/logwise-vector
    newTag: 1.0.0
  - name: logwise-orchestrator
    newName: varunwalia/logwise-orchestrator
    newTag: 1.0.0
  - name: logwise-spark
    newName: varunwalia/logwise-spark
    newTag: 1.0.0
  - name: logwise-healthcheck-dummy
    newName: varunwalia/logwise-healthcheck-dummy
    newTag: 1.0.0


