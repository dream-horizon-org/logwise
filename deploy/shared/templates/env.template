# LogWise Environment Configuration Template
# Copy this file to .env in the docker/ directory and fill in your values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
AWS_SESSION_TOKEN=  # Optional: for temporary credentials

# =============================================================================
# S3 and Athena Configuration
# =============================================================================
S3_BUCKET_NAME=your-logwise-bucket
S3_ATHENA_OUTPUT=s3://your-logwise-bucket/athena-output/
ATHENA_WORKGROUP=logwise
ATHENA_CATALOG=AwsDataCatalog
ATHENA_DATABASE=logwise

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_BROKERS=kafka
KAFKA_BROKERS_HOST=kafka
KAFKA_CLUSTER_ID=9ZkYwXlQ2rBn5JcH0xA

# =============================================================================
# Database Configuration - Orchestrator
# =============================================================================
MYSQL_DATABASE=myapp
MYSQL_USER=myapp
MYSQL_PASSWORD=myapp_pass
MYSQL_ROOT_PASSWORD=root_pass

# =============================================================================
# Database Configuration - Grafana
# =============================================================================
GRAFANA_DB_HOST=mysql
GRAFANA_DB_NAME=grafana
GRAFANA_DB_USER=grafana
GRAFANA_DB_PASSWORD=grafana_password
GRAFANA_DB_ROOT_PASSWORD=grafana_root_password

# =============================================================================
# Service Ports
# =============================================================================
ORCH_PORT=8080
GRAFANA_PORT=3000
VECTOR_API_PORT=8686
VECTOR_OTLP_GRPC_PORT=4317
VECTOR_OTLP_HTTP_PORT=4318

# =============================================================================
# Spark Configuration
# =============================================================================
SPARK_MASTER_HOST=spark://spark-master:7077
SPARK_JAR_PATH=/tmp/spark.jar
LOG4J_PROPERTIES_FILE_PATH=/tmp/log4j.properties

# =============================================================================
# Vector Configuration
# =============================================================================
VECTOR_HOST=vector

